<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="MyDietSchedule.Utils.ResourceDictionaries.Form_Validations" 
    xmlns:Custom="clr-namespace:MyDietSchedule.CustomFormElements">
    <Style x:Key="baseStyle" TargetType="Label">
        <Setter Property="XAlign" Value="Start" />
        <Setter Property="YAlign" Value="Center" />
        <Setter Property="FontSize" Value="Micro" />
        <Setter Property="FontAttributes" Value="Italic" />
    </Style>
    <Custom:BooleanToObjectConverter x:Key="boolToStyleEmail" x:TypeArguments="Style">
        <Custom:BooleanToObjectConverter.FalseObject>
            <Style TargetType="Label" BasedOn="{StaticResource baseStyle}">
                <Setter Property="TextColor" Value="#F44336" />
                <Setter Property="Text" Value="Enter a valid email" />
            </Style>
        </Custom:BooleanToObjectConverter.FalseObject>
        <Custom:BooleanToObjectConverter.TrueObject>
            <Style TargetType="Label" BasedOn="{StaticResource baseStyle}">
                <Setter Property="TextColor" Value="#4CAF50" />
                <Setter Property="Text" Value="" />
            </Style>
        </Custom:BooleanToObjectConverter.TrueObject>
    </Custom:BooleanToObjectConverter>
    
</ResourceDictionary>